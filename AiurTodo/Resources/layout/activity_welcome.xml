<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:padding="30dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_marginVertical="100dp"
        android:layout_gravity="center"
        android:src="@drawable/kahla512"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AiurTodo"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="99dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A todo list based on AiurEventSyncer"
        android:textSize="14sp"
        android:textColor="#333"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:gravity="center"
            android:text="Login"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_border_rounded_corner"
            android:gravity="center"
            android:text="Register"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="#1566e0"
            android:textAllCaps="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="About Aiursoft"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="#333"
        android:layout_marginLeft="10dp"
        android:textAllCaps="true" />


</LinearLayout>

</ScrollView>